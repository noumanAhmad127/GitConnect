<h1>Edit Your Profile</h1>
<%= render 'form', profile: @profile %>
<%= form_with(model: @profile, local: true) do |form| %>
  <div class="field">
    <%= form.label :social_media_links %>
    <%= form.text_field :social_media_links, placeholder: 'Link 1', name: "profile[social_media_links][]", value: @profile.social_media_links[0] %>
    <%= form.text_field :social_media_links, placeholder: 'Link 2', name: "profile[social_media_links][]", value: @profile.social_media_links[1] %>
    <%= form.text_field :social_media_links, placeholder: 'Link 3', name: "profile[social_media_links][]", value: @profile.social_media_links[2] %>
  </div>
  <div class="field">
    <%= form.label :education, "Education" %>
    <% @profile.education.each do |edu| %>
      <div class="education-entry">
        <%= form.label "education[][degree]", "Degree" %>
        <%= form.text_field "education[][degree]", value: edu["degree"], placeholder: "Enter degree" %>
        <%= form.label "education[][institution]", "Institution" %>
        <%= form.text_field "education[][institution]", value: edu["institution"], placeholder: "Enter institution" %>
        <%= form.label "education[][graduation_date]", "Graduation Date" %>
        <%= form.date_select "education[][graduation_date]", selected: edu["graduation_date"] %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :work_experience, "Work Experience" %>
    <% @profile.work_experience.each_with_index do |exp, index| %>
      <div class="work-entry">
        <%= form.label "work_experience[][position]", "Position" %>
        <%= form.text_field "work_experience[][position]", value: exp["position"], placeholder: "e.g. Developer" %>
        <%= form.label "work_experience[][company]", "Company" %>
        <%= form.text_field "work_experience[][company]", value: exp["company"], placeholder: "e.g. Company A" %>
        <%= form.label "work_experience[][duration]", "Duration" %>
        <%= form.text_field "work_experience[][duration]", value: exp["duration"], placeholder: "e.g. 2020-2022" %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit "Update Profile" %>
  </div>
<% end %>
