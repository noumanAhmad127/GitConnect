<h1>Edit Your Profile</h1>
<%= form_with(model: @profile, local: true) do |form| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :profile_pic, "Profile Picture" %>
    <% if @profile.profile_pic.attached? %>
      <div>
        <strong>Current Profile Picture:</strong><br>
        <%= image_tag @profile.profile_pic, alt: "Profile Picture", style: "max-width: 200px; max-height: 200px;" %>
      </div>
    <% end %>
    <%= form.file_field :profile_pic %>
  </div>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, optional: true %>
  </div>
  <div class="field">
    <%= form.label :contact_info %>
    <%= form.text_field :contact_info %>
  </div>
  <div class="field">
    <%= form.label :headline %>
    <%= form.text_field :headline %>
  </div>
  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :skill_sets, "Skill Sets (comma-separated)" %>
    <%= form.text_area :skill_sets, value: @profile.skill_sets.join(', ') %>
  </div>
  <div class="field">
    <%= form.label :social_media_links, "Social Media Links" %>
    <% @profile.social_media_links.each_with_index do |link, index| %>
      <%= form.text_field :social_media_links, name: "profile[social_media_links][]", value: link, placeholder: "Enter Link #{index + 1}" %>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :education, "Education" %>
    <% @profile.education.each do |edu| %>
      <div class="education-entry">
        <%= form.label "education[][degree]", "Degree" %>
        <%= form.text_field "education[][degree]", value: edu["degree"], placeholder: "Enter degree" %>
        <%= form.label "education[][institution]", "Institution" %>
        <%= form.text_field "education[][institution]", value: edu["institution"], placeholder: "Enter institution" %>
        <%= form.label "education[][graduation_date]", "Graduation Date" %>
        <%= form.date_select "education[][graduation_date]", selected: edu["graduation_date"] %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :work_experience, "Work Experience" %>
    <% @profile.work_experience.each_with_index do |exp, index| %>
      <div class="work-entry">
        <%= form.label "work_experience[][position]", "Position" %>
        <%= form.text_field "work_experience[][position]", value: exp["position"], placeholder: "e.g. Developer" %>
        <%= form.label "work_experience[][company]", "Company" %>
        <%= form.text_field "work_experience[][company]", value: exp["company"], placeholder: "e.g. Company A" %>
        <%= form.label "work_experience[][responsibilities]", "Responsibilities" %>
        <%= form.text_field "work_experience[][responsibilities]", value: exp["responsibilities"], placeholder: "e.g. Web Developer" %>
        <%= form.label "work_experience[][start_date]", "Start Date" %>
        <%= form.text_field "work_experience[][start_date]", value: exp["start_date"], placeholder: "" %>
        <%= form.label "work_experience[][end_date]", "End Date" %>
        <%= form.text_field "work_experience[][end_date]", value: exp["end_date"], placeholder: "" %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit "Update Profile" %>
  </div>
<% end %>
