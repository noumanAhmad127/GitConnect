<h1 class="text-3xl font-bold mb-4">Your Posts (<%= @user_posts.count %>)</h1>
<% if @user_posts.any? %>
  <div class="posts-container">
    <% @user_posts.each do |post| %>
      <div class="post-card bg-white rounded-lg shadow-lg p-4 mb-4">
        <h2 class="text-xl font-semibold"><%= link_to post.title, post_path(post) %></h2>
        <p class="text-gray-700"><%= markdown(post.content) %></p>
        <p class="text-gray-600">Posted on: <%= post.created_at.strftime("%d %b %Y") %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600">You have not created any posts yet.</p>
<% end %>
<%= link_to 'Back to Profile', profile_path(current_user.profile), class: 'btn btn-light mt-4' %>
