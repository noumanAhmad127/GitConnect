<h1>All Posts</h1>
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p><%= markdown(post.content) %></p>
    <p><small>Tags: <%= raw post.tags.map(&:name).map { |t| link_to "##{t}", tag_path(t) }.join(' ') %></small></p>
    <p>Posted by: <%= link_to post.profile.name, profile_path(post.profile) %></p>
  </div>
  <hr>
<% end %>
<%= link_to 'New Post', new_profile_post_path(current_user.profile) if user_signed_in? %>
