<h1>All Posts</h1>
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p><%= truncate(post.content, length: 100) %></p>
    <p><strong>Tags:</strong>
      <%= post.tags.map(&:name).join(", ") %>
    </p>
    <p>Posted by: <%= link_to post.profile.name, profile_path(post.profile) %></p>
  </div>
  <hr>
<% end %>
<%= link_to 'New Post', new_profile_post_path(current_user.profile) if user_signed_in? %>
