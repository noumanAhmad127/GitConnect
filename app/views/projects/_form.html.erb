<main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4">
  <div class="p-2 md:p-4">
    <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
      <h2 class=" text-2xl font-bold sm:text-xl">Project Submission</h2>
      <div class="grid max-w-2xl mx-auto">
        <div class="items-center mt-7 text-[#202142]">
          <%= form_with model: [@profile, @project], local: true do |form| %>
            <div class="flex flex-col mb-4">
              <%= form.label :title, class: "block mb-2 text-sm font-medium text-indigo-900  " %>
              <%= form.text_field :title, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "Enter Project Title" %>
            </div>
            <div class="flex flex-col mb-4">
              <%= form.label :description, class: "block mb-2 text-sm font-medium text-indigo-900  " %>
              <%= form.text_area :description, class: "block p-2.5 w-full text-sm text-indigo-900 bg-indigo-50 rounded-lg border border-indigo-300 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Enter Project Description", rows: 4 %>
            </div>
            <div class="flex flex-col mb-4">
              <%= form.label :demo_link, class: "block mb-2 text-sm font-medium text-indigo-900  " %>
              <%= form.text_field :demo_link, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", placeholder: "Enter Demo Link" %>
            </div>
            <div class="flex flex-col mb-4">
              <%= form.label :images, "Project Screenshots", class: "block mb-2 text-sm font-medium text-indigo-900  " %>
              <div class="flex flex-col items-start">
                <label class="py-3.5 px-7 text-base font-medium text-indigo-100 bg-[#202142] rounded-lg hover:bg-indigo-900 cursor-pointer">
                  Select Files
                  <%= form.file_field :images, multiple: true, class: 'hidden' %>
                </label>
              </div>
            </div>
            <div class="flex justify-end">
              <%= form.submit class: "text-white bg-blue-500 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
