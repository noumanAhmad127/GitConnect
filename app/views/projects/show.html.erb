<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-3xl font-bold mb-4"><%= @project.title %></h1>
  <div class="mb-4">
    <h2 class="text-xl font-semibold">Description</h2>
    <p class="text-gray-700 mt-2"><%= @project.description %></p>
  </div>
  <div class="mb-4">
    <h2 class="text-xl font-semibold">Demo Link</h2>
    <% if @project.demo_link.present? %>
      <a href="<%= @project.demo_link %>" target="_blank" class="text-blue-500 hover:underline"><%= @project.demo_link %></a>
    <% else %>
      <p class="text-gray-500">No demo link provided</p>
    <% end %>
  </div>
  <div class="mb-4">
    <h2 class="text-xl font-semibold">Project Screenshots</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-2">
      <% if @project.images.attached? %>
        <% @project.images.each do |image| %>
          <%= image_tag image, class: "w-full h-48 object-cover rounded-md shadow-md" %>
        <% end %>
      <% else %>
        <p class="text-gray-500">No screenshots uploaded</p>
      <% end %>
    </div>
  </div>
  <div class="flex justify-between mt-6">
    <%= link_to 'Edit', edit_profile_project_path(@profile, @project), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Back to Profile', profile_path(@profile), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Delete', profile_project_path(@profile, @project), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
